<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ListView
            android:id="@+id/credential_menu_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
    <Button
        	android:id="@+id/credential_menu_log_button"
        	android:text="@string/log_button_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_below="@id/credential_menu_list" />
    <Button
        	android:id="@+id/credential_menu_settings_button"
        	android:text="@string/settings_button_text"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_below="@id/credential_menu_log_button"
        	android:layout_alignParentRight="true"
        	android:layout_alignParentBottom="true"/>
</RelativeLayout>