<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/menu_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:text="@string/menu_heading_credentials"
        android:textColor="@color/black"
        android:textStyle="bold" />
    
    <ListView
            android:id="@+id/credential_menu_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_heading"
            android:layout_alignParentLeft="true"
            android:dividerHeight="1dp"/>

    <TextView
        	android:id="@+id/credentials_menu_no_creds"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:padding="10dp"
        	android:layout_alignParentTop="true"
        	android:layout_centerHorizontal="true"
        	android:text="@string/no_credentials_available"
        	android:textColor="@color/irmadarkblue"
        	android:textSize="16sp"
        	android:textStyle="bold" />
</RelativeLayout>